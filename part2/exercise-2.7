version: '3.5'

services: 
  frontend:
    image: kurkkumopo-frontend
    ports:
      - 3000:3000
  
  backend: 
    image: kurkkumopo-backend
    ports: 
      - 5000:5000
    volumes:
      - model:/src/model
    depends_on: 
      - training
  
  training:
    image: kurkkumopo-training
    volumes:
      - images:/src/imgs
      - data:/data
      - model:/src/model

volumes: 
  images:
  files:
  model:
  data:
  
